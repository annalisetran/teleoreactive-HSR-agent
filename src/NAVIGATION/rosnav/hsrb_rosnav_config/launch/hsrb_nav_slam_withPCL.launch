<launch>

  <arg name="localization_type" default="amcl"/>
 
  <!-- Map server -->
  <!-- <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" /> -->
  
  <node pkg="gmapping" type="slam_gmapping" name="hsr_slam_gmapping" output="screen">
      <remap from="scan" to="/merged_laser"/>
      <param name= "base_frame" value= "base_link"/>
      <param name= "odom_frame" value= "odom"/>
      <param name= "map_frame" value= "map"/>
      <param name="map_update_interval" value="0.1"/>
      <param name="linearUpdate" value="0.1"/>
      <param name="angularUpdate" value="0.25"/>
      <!-- <param name="temporalUpdate" value="0.1"/> -->
      <!-- <param name="resampleThreshold" value="0.5"/> -->
    </node>

  <!-- Merged laser -->
  <include file="$(find nav_utils)/launch/pcl_add_to_laser.launch"/>
  <!-- Localization -->
  <include file="$(find hsrb_rosnav_config)/launch/include/$(arg localization_type).launch.xml"/>

  <!-- Move base conroller -->
  <include file="$(find hsrb_rosnav_config)/launch/include/move_base_no_static_withPCL.launch.xml"/>

  <!-- slam gmapping do it manually on another terminal-->
  <!-- <node name="gmap_server" pkg="gmapping" type="slam_gmapping" output = "screen">
    <param name="scan" type="string" value="/hsrb/base_scan"/>
  </node> -->

</launch>
